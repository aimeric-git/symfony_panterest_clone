{% extends 'base.html.twig' %}

{% block title %} Find all the best pins in the world {% endblock %}

{% block body %}
    <h1> {{ pluralize(pins|length, 'Pin', 'Pins')}} </h1>
    
        {% for pin in pins %}
            <h1><a href=" {{ path('app_show', {'id': pin.id}) }} "> {{pin.id}} {{ pin.title }} </a></h1>
            <p> {{ pin.description | u.truncate(10, '...')}} </p>
            <p>Submitted {{ pin.createdAt | ago }} </p>
        {% endfor %}
    
    
{% endblock %}
