{% extends "base.html.twig" %}

{% block title %}Edit User Account{% endblock %}

{% block body %}
    <div class="row">
        <div class="md-col-6 mx-auto">
            <h1 class="text-center">Update Profile</h1>

            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.firstName) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.lastName) }}
                    </div>
                </div>
                    {{ form_rest(form) }}
                <button class="btn btn-primary btn-block">Apply Changes</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
